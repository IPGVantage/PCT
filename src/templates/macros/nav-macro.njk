{% macro active(activePage='projects') %}
  <nav>
    <ul class="row">
      {% for i in ['projects', 'reports', 'about', 'profile'] %}
        <li class="{%if activePage == i %}current {% endif %} {{i}}"><a href="/templates/pages/{{ i }}.html" class="{%if activePage == i %}active {% endif %}"> <span>{{ i | title }}</span></a></li>
      {% endfor %}
    </ul>
  </nav>
{% endmacro %}

