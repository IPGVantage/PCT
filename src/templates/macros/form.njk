{% macro field(name, value='', type='text', placeholder='') %}
<div class="field">
  <input type="{{ type }}" name="{{ name }}"
          placeholder="{{ placeholder | escape }}"
          value="{{ value | escape }}"
          />

</div>
{% endmacro %}

{% macro label(text) %}
<div>
  <label>{{ text }}</label>
</div>
{% endmacro %}